<van-sticky>
	<view class="ui-header" style="height:{{height}}px;padding-top:{{ capsule.top }}px;background-color:{{ color }}">

		<!-- left -->
		<view wx:if="{{ type==='back' }}" class="left" style="{{ style }}" bindtap="actionBack">
			<van-icon name="arrow-left" color="white" size="16px" />
			<view class="back-text">首页</view>
		</view>

		<!-- title -->
		<view wx:if="{{ title }}" class="title" style="{{ style }}{{ titleStyle }}">
			{{ title }}
		</view>
	</view>
</van-sticky>
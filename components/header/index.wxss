/* components/header/index.wxss */
.header {
    overflow: auto;
    position: relative;
    color: #fff;
    box-sizing: border-box;
}

.header .title {
    text-align: center;
    position: absolute;
    margin: 0 auto;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.left {
    display: flex;
    align-items: center;
    position: absolute;
    left: 0;
    font-size: 14px;
}

.left.capsule {
    background-color: transparent;
    border-radius: 60px;
    margin-left: 20rpx;
    padding: 0 10rpx;
    color: #000;
}

.left.capsule::after {
    border-radius: 32px;
}

.left .back-text {
    font-size: 16px;
}

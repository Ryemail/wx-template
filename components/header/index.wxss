/* components/header/index.wxss */
.ui-header {
  overflow: auto;
  position: relative;
  box-sizing: border-box;
  color: #fff;
}

.ui-header .title {
  text-align: center;
  position: absolute;
  margin: 0 auto;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background-color: bisque;
}

.left {
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  padding: 0 20rpx;
  font-size: 14px;
  background-color: blueviolet;
}

.left .back-text{
  font-size: 16px;
}